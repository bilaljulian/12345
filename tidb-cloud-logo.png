/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
}

.container {
    width: 90%;
    margin: 0 auto;
}

header {
    background: #333;
    color: #fff;
    padding: 10px 0;
}

header .logo img {
    width: 150px;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
}

nav ul li {
    margin-left: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
}

section {
    padding: 20px 0;
}

h2 {
    margin-bottom: 20px;
}

.grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.product-box {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    width: calc(33.333% - 20px);
    background: #fff;
    text-align: center;
    padding: 15px;
}

.product-box img {
    max-width: 100%;
    height: auto;
}

.product-box h3 {
    margin: 10px 0;
}

.product-box .description {
    color: #555;
}

.product-box .price {
    font-size: 1.2em;
    color: #333;
    margin: 10px 0;
}

.product-box .buy-button {
    display: inline-block;
    background: #007bff;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
}

.category-list ul {
    list-style: none;
}

.category-list ul li {
    margin: 10px 0;
}

.category-list ul li a {
    text-decoration: none;
    color: #007bff;
}

footer {
    background: #333;
    color: #fff;
    text-align: center;
    padding: 10px 0;
}

form {
    display: flex;
    flex-direction: column;
}

form label {
    margin: 10px 0 5px;
}

form input, form textarea {
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

form button {
    background: #007bff;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

form button:hover {
    background: #0056b3;
}

/* Responsive Design */
@media (max-width: 768px) {
    .product-box {
        width: calc(50% - 20px);
    }
}

@media (max-width: 480px) {
    .product-box {
        width: 100%;
    }

    nav ul {
        flex-direction: column;
        align-items: center;
    }

    nav ul li {
        margin: 10px 0;
    }
}
