{
  "compilerOptions": {
    "target": "es6",                         // Set the JavaScript language version to ES6
    "module": "commonjs",                    // Specify the module code generation method
    "lib": ["dom", "es6"],                   // Include type definitions for DOM and ES6
    "sourceMap": true,                       // Generate source maps for debugging
    "outDir": "./dist",                      // Redirect output structure to the directory
    "rootDir": "./src",                      // Specify the root directory of input files
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure that file names are consistent
  },
  "include": [
    "src/**/*"                              // Include all files in the src directory
  ],
  "exclude": [
    "node_modules",                         // Exclude node_modules directory
    "**/*.test.ts"                          // Exclude test files if you have any
  ]
}
