document.addEventListener('DOMContentLoaded', () => {
    // Dynamic Listings Display
    const listings = [
        { title: 'Rare Coin', description: 'A rare gold coin from the 19th century.', imageUrl: 'coin.jpg', price: '$500' },
        { title: 'Vintage Watch', description: 'An antique watch from the 1920s.', imageUrl: 'watch.jpg', price: '$800' },
        // Add more items as needed
    ];

    const listingContainer = document.getElementById('listingContainer');

    listings.forEach(item => {
        const itemDiv = document.createElement('div');
        itemDiv.className = 'listing-item';
        itemDiv.innerHTML = `
            <img src="${item.imageUrl}" alt="${item.title}">
            <h3>${item.title}</h3>
            <p>${item.description}</p>
            <p>Price: ${item.price}</p>
        `;
        listingContainer.appendChild(itemDiv);
    });

    // Contact Form Submission
    const contactForm = document.getElementById('contactForm');
    contactForm.addEventListener('submit', (event) => {
        event.preventDefault();
        alert('Your message has been sent.');
    });

    // Login Form Submission
    const loginForm = document.getElementById('loginForm');
    loginForm.addEventListener('submit', (event) => {
        event.preventDefault();
        alert('Login successful.');
    });

    // Signup Form Submission
    const signupForm = document.getElementById('signupForm');
    signupForm.addEventListener('submit', (event) => {
        event.preventDefault();
        alert('Signup successful.');
    });

    // Featured Listings Button
    const featuredListingsBtn = document.getElementById('featuredListingsBtn');
    featuredListingsBtn.addEventListener('click', () => {
        alert('Displaying featured listings.');
    });
});
const express = require('express');
const bodyParser = require('body-parser');
const app = express();
const port = 3000;

// Middleware
app.use(bodyParser.json());
app.use(express.static('public'));

// Routes
app.post('/contact', (req, res) => {
    // Handle contact form submission
    console.log('Contact form data:', req.body);
    res.json({ message: 'Message received' });
});

app.post('/login', (req, res) => {
    // Handle login form submission
    console.log('Login data:', req.body);
    res.json({ message: 'Login successful' });
});

app.post('/signup', (req, res) => {
    // Handle signup form submission
    console.log('Signup data:', req.body);
    res.json({ message: 'Signup successful' });
});

// Start Server
app.listen(port, () => {
    console.log(`Server is running on http://localhost:${port}`);
});
const mongoose = require('mongoose');

const connectDB = async () => {
    try {
        await mongoose.connect('mongodb://localhost:27017/enull', {
            useNewUrlParser: true,
            useUnifiedTopology: true,
        });
        console.log('MongoDB connected');
    } catch (err) {
        console.error(err.message);
        process.exit(1);
    }
};

module.exports = connectDB;
